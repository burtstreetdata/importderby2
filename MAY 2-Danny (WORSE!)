--GRRRRR! WHAT! WHAT! BUGGGGY SOFTWAAAAARE!--
select * 
from bb.batting b
where b.yearid in (2014, 2015)
and b.H > 20

select * 
from bb.batting b
where (b.yearid =2014 and b.H > 20)
or (b.YEARID = 2015 and b.H > 20)


select count(*) 
from bb.batting b
where (b.yearid =2014 and b.H > 20)
or (b.YEARID = 2015 and b.H > 20)


select sum(b.H), b.PLAYERID
from bb.batting b
where b.yearid in (2014, 2015)
group by b.PLAYERID
having sum(b.H) > 20

select p.namefirst, p.namelast, hitters.hits
from bb.PERSON p
join (
	select sum(b.H) as hits, b.PLAYERID
	from bb.batting b
	where b.yearid=2014
	group by b.PLAYERID
	having sum(b.H) > 20 
	) hitters2014
	on p.PLAYERID = hitters.playerid

	select p.namefirst, p.namelast, hitters.hits15
	from bb.PERSON p
join (
	select sum(b.H) as hits15, b.PLAYERID
	from bb.batting b
	where b.yearid=2015
	group by b.PLAYERID
	having sum(b.H) > 20 
	) hitters2015
	on p.PLAYERID = hitters.playerid
	order by hits15 asc
	
